<!DOCTYPE html>
<html lang="en">

<head>
    {{>head}}
</head>

<body>
    {{>navbar}}

    <!-- Main Header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" name="location" id="cityName" placeholder="Enter Location"
                            autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">{{tzone}}</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_name">
                            {{msg}}
                            {{location}} {{country}}
                        </p>
                        <div class="middle_layer ">
                            <p id="temp"><span id="temp_real_val">{{tempval}}</span><sup> o</sup>C</p>
                            <p id="temp_status">{{tempStatus}}</i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/script.js"></script>
</body>

</html>